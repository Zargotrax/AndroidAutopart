<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.product.ProductDetailActivity">

    <TextView
        android:id="@+id/txtView_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="61dp"
        android:text="ID :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtView_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="Title :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtView_id_label" />

    <TextView
        android:id="@+id/txtView_modelNB_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="Model Number :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtView_title_label" />

    <TextView
        android:id="@+id/txtView_code_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="Code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtView_modelNB_label" />

    <TextView
        android:id="@+id/txtView_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="Price per unit :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtView_code_label" />

    <TextView
        android:id="@+id/txtView_inventory_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="Inventory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtView_price_label" />

    <TextView
        android:id="@+id/txtView_supplierID_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="Supplier ID :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtView_inventory_label" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="163dp"
        android:layout_marginTop="341dp"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtView_supplierID"
        android:layout_width="222dp"
        android:layout_height="18dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/txtView_supplierID_label"
        app:layout_constraintTop_toBottomOf="@+id/txtView_inventory" />

    <TextView
        android:id="@+id/txtView_price"
        android:layout_width="205dp"
        android:layout_height="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/txtView_price_label"
        app:layout_constraintTop_toBottomOf="@+id/txtView_code" />

    <TextView
        android:id="@+id/txtView_code"
        android:layout_width="254dp"
        android:layout_height="18dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toEndOf="@+id/txtView_code_label"
        app:layout_constraintTop_toBottomOf="@+id/txtView_modelNB_label" />

    <TextView
        android:id="@+id/txtView_inventory"
        android:layout_width="233dp"
        android:layout_height="20dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/txtView_inventory_label"
        app:layout_constraintTop_toBottomOf="@+id/txtView_price_label" />

    <TextView
        android:id="@+id/txtView_title"
        android:layout_width="254dp"
        android:layout_height="18dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="21dp"
        app:layout_constraintStart_toEndOf="@+id/txtView_title_label"
        app:layout_constraintTop_toBottomOf="@+id/txtView_idproduct" />

    <TextView
        android:id="@+id/txtView_idproduct"
        android:layout_width="254dp"
        android:layout_height="18dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="61dp"
        app:layout_constraintStart_toEndOf="@+id/txtView_title_label"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtView_modelNB"
        android:layout_width="190dp"
        android:layout_height="17dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/txtView_modelNB_label"
        app:layout_constraintTop_toBottomOf="@+id/txtView_title" />
</androidx.constraintlayout.widget.ConstraintLayout>