<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="198dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtView_Supplier_Phone_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:layout_marginTop="24dp"
                android:text="Telephone :"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtView_Supplier_Name_label" />

            <TextView
                android:id="@+id/txtView_Supplier_Name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="112dp"
                android:layout_marginTop="40dp"
                android:text="Nom :"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtView_Supplier_Contact_Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="28dp"
                android:text="Nom du contact :"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtView_Supplier_Phone_label" />

            <TextView
                android:id="@+id/txtView_Supplier_Name"
                android:layout_width="200dp"
                android:layout_height="21dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="41dp"
                app:layout_constraintStart_toEndOf="@+id/txtView_Supplier_Name_label"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtView_Supplier_Phone"
                android:layout_width="200dp"
                android:layout_height="21dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="22dp"
                app:layout_constraintStart_toEndOf="@+id/txtView_Supplier_Phone_label"
                app:layout_constraintTop_toBottomOf="@+id/txtView_Supplier_Name" />

            <TextView
                android:id="@+id/txtView_Supplier_Contact"
                android:layout_width="200dp"
                android:layout_height="21dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="25dp"
                app:layout_constraintStart_toEndOf="@+id/txtView_Supplier_Contact_Label"
                app:layout_constraintTop_toBottomOf="@+id/txtView_Supplier_Phone" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>